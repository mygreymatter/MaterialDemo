<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ripple="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.mayo.materialdemo.ripple.ActCustomRipple">

    <com.mayo.materialdemo.RippleEffect android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        ripple:rv_type="rectangle">

        <Button android:layout_width="match_parent" android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_light"
                android:padding="10dp"
                android:text="Rectangle Ripple effect"/>
    </com.mayo.materialdemo.RippleEffect>

    <com.mayo.materialdemo.RippleEffect android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        ripple:rv_type="doubleRipple">

        <Button android:layout_width="match_parent" android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_light"
                android:padding="10dp"
                android:text="Double Ripple effect"/>
    </com.mayo.materialdemo.RippleEffect>

    <com.mayo.materialdemo.RippleEffect android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        ripple:rv_type="simpleRipple">

        <Button android:layout_width="match_parent" android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_light"
                android:padding="10dp"
                android:text="Simple Ripple effect"/>
    </com.mayo.materialdemo.RippleEffect>

    <com.mayo.materialdemo.RippleEffect android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        ripple:rv_type="simpleRipple">

        <ImageView android:layout_width="match_parent" android:layout_height="200dp"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_black_widow"
                   android:text="Simple Ripple effect"/>
    </com.mayo.materialdemo.RippleEffect>
    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/frame"
        android:clickable="true" />-->

</LinearLayout>
